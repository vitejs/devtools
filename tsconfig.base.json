{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@vitejs/devtools-kit": ["./packages/devtools-kit/src/index.ts"],
      "@vitejs/devtools-kit/client": ["./packages/devtools-kit/src/client/index.ts"],
      "@vitejs/devtools-vite": ["./packages/devtools-vite/src/index.ts"],
      "@vitejs/devtools": ["./packages/devtools/src/index.ts"]
    },
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedDeclarations": false,
    "skipLibCheck": true
  }
}
